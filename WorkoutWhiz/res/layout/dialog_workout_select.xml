<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >
    
    
	<!-- ListView of recent workouts -->
	<ListView
	    android:id="@+id/recent_workouts_list_view"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:scrollbars="none"
	    android:cacheColorHint="#00000000" />"
    
    <LinearLayout
        android:id="@+id/create_new_workout_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <RadioButton 
            android:id="@+id/create_new_workout_radio_button"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        
        <EditText
            android:id="@+id/create_new_workout_edit_text"
            android:inputType="text"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/create_new_workout_hint" />
        
    </LinearLayout>

</LinearLayout>