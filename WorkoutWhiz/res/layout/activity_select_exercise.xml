<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectExerciseActivity" >

    <!-- Title of the Workout -->
    <TextView
        android:id="@+id/workout_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/workout_title_text_view_default"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- ScrollView that contains our list of available exercises. -->
    <ScrollView
        android:id="@+id/workout_exercise_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:fillViewport="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/incompleted_exercises_text_view"
                android:textSize="@dimen/list_view_dividers_text_size" />
            
            <!-- ListView of incomplete exercises -->
            <ListView
                android:id="@+id/incomplete_exercises_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollbars="none"
                android:background="#85D6FF" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/completed_exercises_text_view"
                android:textSize="@dimen/list_view_dividers_text_size" />

            <!-- ListView of complete exercises -->
            <ListView
                android:id="@+id/complete_exercises_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollbars="none"
                android:background="#85D6FF" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/create_exercise_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/create_exercise_text_view"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Horizontal Linear Layout that allows us to add new exercises -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/add_exercise_edit_text"
            android:inputType="text"
            android:hint="@string/create_exercise_edit_text_hint"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/add_exercise_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onAddExerciseButtonClicked"
            android:text="@string/add_exercise_button" />

    </LinearLayout>
    
    <!-- Button used to end the workout. -->
	<Button
	    android:id="@+id/end_workout_button"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:onClick="onEndWorkoutButtonClicked"
	    android:text="@string/end_workout_button" />
	    
</LinearLayout>