<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg_color"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/title_image_view"
        android:background="@drawable/activity_top_bar"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/main_activity_logo" />

    <LinearLayout
        android:background="@color/bg_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:orientation="vertical" >
        
	    <Button
	        android:id="@+id/workout_button"
	        style="@style/AppTheme.View.TextView.Button.Navigation"
	        android:onClick="onWorkoutButtonClicked"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:text="@string/workout_button" />
	
	    <Button
	        android:id="@+id/history_button"
	        style="@style/AppTheme.View.TextView.Button.Navigation"
	        android:layout_marginTop="10dp"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:enabled="false"
	        android:onClick="onHistoryButtonClicked"
	        android:text="@string/history_button" />
	
	    <Button
	        android:id="@+id/settings_button"
	        style="@style/AppTheme.View.TextView.Button.Navigation"
	        android:enabled="false"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:layout_marginTop="10dp"
	        android:onClick="onSettingsButtonClicked"
	        android:text="@string/settings_button" />
        
    </LinearLayout>

</LinearLayout>
