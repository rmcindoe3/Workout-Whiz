<com.mcindoe.workoutwhiz.views.WorkoutLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_workout_history"
    style="@style/AppTheme.View.ListView.ListItem.Exercise"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:paddingLeft="5dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:paddingLeft="5dp"
        	android:gravity="left|center_vertical"
	        android:orientation="vertical" >
	
		    <TextView 
		        android:id="@+id/workout_name_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left|bottom"
		        android:text="@string/default_workout_name"
		        android:textSize="@dimen/list_item_exercise_name_text_size" />
		
		    <TextView 
		        android:id="@+id/workout_date_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left|top"
		        android:textColor="#777777"
		        android:text="@string/default_workout_date"
		        android:textSize="@dimen/list_item_exercise_intensity_text_size" />
	        
	    </LinearLayout>
	    
	    <ImageView
	        android:id="@+id/favorite_star_image_view"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="15dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

    </LinearLayout>
    
    <ImageButton
        android:id="@+id/list_item_workout_options_button"
        android:gravity="right|center_vertical"
        android:src="@drawable/list_item_options_button"
        android:background="@color/choice_button_color"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</com.mcindoe.workoutwhiz.views.WorkoutLinearLayout>