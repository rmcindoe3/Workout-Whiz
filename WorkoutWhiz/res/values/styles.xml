<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="AppTheme.Layout">
        <item name="android:background">@color/bg_dark_blue</item>
    </style>

    <style name="AppTheme.View">
    </style>

    <style name="AppTheme.View.ListView">
    </style>

    <style name="AppTheme.View.ListView.ListItem">
    </style>

    <style name="AppTheme.View.ListView.ListItem.Exercise">
		<item name="android:background">@drawable/wide_list_item_exercise_selector</item>
        <item name="android:divider">@drawable/list_view_exercise_divider</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.View.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.View.TextView.ExerciseOptions">
		<item name="android:background">@drawable/popup_exercise_options_item</item>
        <item name="android:layout_height">@dimen/exercise_options_height</item>
        <item name="android:layout_width">@dimen/exercise_options_width</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.View.TextView.Subtitle">
        <item name="android:gravity">bottom|left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@dimen/activity_subtitle_text_size</item>
    </style>

    <style name="AppTheme.View.TextView.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="AppTheme.View.TextView.RepCount">
        <item name="android:background">@drawable/rep_text_view</item>
        <item name="android:textSize">@dimen/rep_count_text_size</item>
    </style>
    
    <style name="AppTheme.View.TextView.Title">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_title_bar_height</item>
        <item name="android:background">@drawable/activity_title_bar</item>
        <item name="android:drawableLeft">@drawable/workout_whiz_activity_title_icon</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/activity_title_text_size</item>
    </style>

    <style name="AppTheme.View.TextView.Button">
    </style>

    <style name="AppTheme.View.TextView.Button.MainMenu">
        <item name="android:textSize">@dimen/activity_title_text_size</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="AppTheme.View.TextView.Button.NumberPad">
        <item name="android:background">@drawable/button_number_pad_selector</item>
        <item name="android:textSize">@dimen/number_pad_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_margin">1px</item>
    </style>

    <style name="AppTheme.View.TextView.Button.Navigation">
        <item name="android:background">@drawable/button_navigation_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>